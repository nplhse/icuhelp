{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - {{ "title.contacts"|trans }}{% endblock %}

{% block body %}
    {{ include('_components/project_tabs.html.twig') }}

    <h1 class="mt-2">{{ "title.contacts"|trans }}</h1>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}" role="alert">
                {{ message|trans }}
            </div>
        {% endfor %}
    {% endfor %}

    {% if contacts %}
        <div class="row row-cols-1 row-cols-sm-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-3">
            {% for contact in contacts %}
                <div class="col mb-4">
                    <div class="card mx-auto w-100">
                        <div class="card-body">
                            <h5 class="card-title">{{ contact.name }}</h5>
                            <a class="btn btn-outline-primary" href="{{ path('contact_show', {'id': contact.id}) }}">{{ "button.contact.view"|trans }}</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="row">
            {{ "msg.no.contacts.found"|trans }}
        </div>
    {% endif %}

    {% if is_granted('ROLE_EDITOR') %}
        <div class="clearfix mt-3">
            <div class="btn-group float-right" role="group" aria-label="">
                <a class="btn btn-primary" href="{{ path('contact_new') }}" role="button">{{ "button.contact.new"|trans }}</a>
            </div>
        </div>
    {% endif %}
{% endblock %}
