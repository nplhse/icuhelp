{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - {{ "title.finding_generator"|trans }}{% endblock %}

{% block body %}
    {{ include('_components/project_tabs.html.twig') }}

    <div>
        <h1 class="mt-2">{{ "title.finding_generator"|trans }}</h1>

        <div class="card">
            <div class="card-header">
                <button class="btn copy btn-dark btn-sm float-right" data-clipboard-target="#copy-target"><i class="fa fa-clipboard"></i> {{ "button.copy"|trans }}</button>
            </div>
            <div class="card-body" id="copy-target">
                {{ include('finding_generator/exam_body.html.twig', {'exam': exam}) }}
            </div>
            <div class="card-footer">
                <div class="clearfix">
                    <a class="btn btn-primary float-right" href="{{ path('finding_generator') }}" role="button">{{ "link.findings.back"|trans }}</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {{ encore_entry_script_tags('letter') }}
{% endblock %}