{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - {{ "title.snippet.edit"|trans }}{% endblock %}

{% block body %}
    <main role="main" class="content container">
        {{ include('_components/project_tabs.html.twig') }}

        <h1 class="mt-2">{{ "title.snippet.edit"|trans }}</h1>

        {% for error in errors %}
            <div class="alert alert-danger">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endfor %}

        {{ include('snippets/_form.html.twig', {
            button_text: 'button.snippet.save'
        }) }}
    </main>
{% endblock %}
