{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - {{ "title.snippet.new"|trans }}{% endblock %}

{% block body %}
    <main role="main" class="container">
        {{ include('components/project_tabs.html.twig') }}

        <div>
            <h1 class="mt-2">{{ "title.snippet.new"|trans }}</h1>

            {% for error in errors %}
                <div class="alert alert-danger">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endfor %}

            {{ include('snippets/_form.html.twig', {
                button_text: 'button.snippet.create'
            }) }}
        </div>
    </main>
{% endblock %}
