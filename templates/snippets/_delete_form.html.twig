<form method="post" action="{{ path('snippet_delete', {'id': snippet.id}) }}" onsubmit="return confirm({{ "msg.snippet.confirm_delete"|trans }});">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ snippet.id) }}">
    <button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i> {{ "button.snippet.delete"|trans }}</button>
</form>