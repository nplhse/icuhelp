{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - {{ "title.letter_create"|trans }}{% endblock %}

{% block body %}
    <main role="main" class="container">
        <div class="jumbotron">
            <h1>{{ "title.letter_create"|trans }}</h1>

            {% for error in errors %}
                <div class="alert alert-danger">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endfor %}

            {{ form_start(form) }}

            {{ form_row(form.name) }}
            {{ form_row(form.gender) }}
            {{ form_row(form.snippets) }}

            <button type="submit" class="btn btn-success">{{ "button.createletter"|trans({}, "forms") }} <span class="fa fa-lock"></span></button>
            {{ form_end(form) }}
        </div>
    </main>
{% endblock %}
