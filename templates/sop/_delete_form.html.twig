<form method="post" action="{{ path('sop_delete', {'id': sop.id}) }}" onsubmit="return confirm({{ "msg.sop.delete"|trans }});">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ sop.id) }}">
    <button class="btn btn-danger"><i class="fa fa-trash"></i> {{ "button.sop.delete"|trans }}</button>
</form>
