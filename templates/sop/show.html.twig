{% extends 'base.html.twig' %}

{% block title %}SOP{% endblock %}

{% block body %}
    <main role="main" class="container">
        {{ include('_components/project_tabs.html.twig') }}

        <h1>SOP</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ sop.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ sop.name }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ sop.description }}</td>
                </tr>
                <tr>
                    <th>Attachment</th>
                    <td>
                        <a href="{{ asset('uploads/' ~ sop.SOPFilename) }}" target="_blank">View Attachment (Opens in new window or tab)</a>
                    </td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('sop_index') }}">back to list</a>

        <a href="{{ path('sop_edit', {'id': sop.id}) }}">edit</a>

        {{ include('sop/_delete_form.html.twig') }}

    </main>
{% endblock %}
