{% extends 'base.html.twig' %}

{% block title %}{{ "title.info.edit"|trans }} - {{ info.name }}{% endblock %}

{% block body %}
<main role="main" class="container">
    {{ include('_components/project_tabs.html.twig') }}

    <div>
        <h1 class="mt-2">{{ "title.info.edit"|trans }}</h1>

        {% for error in errors %}
            <div class="alert alert-danger">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endfor %}

        {{ include('info/_form.html.twig', {
            button_text: 'button.info.save'
        }) }}
        {{ include('info/_delete_form.html.twig') }}
    </div>
</main>
{% endblock %}
