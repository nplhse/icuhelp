{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - {{ "title.info.edit"|trans }}: {{ info.name }}{% endblock %}

{% block body %}
<main role="main" class="container">
    {{ include('_components/project_tabs.html.twig') }}

    <div>
        <h1 class="mt-2">{{ "title.info.edit"|trans }}</h1>

        {% for error in errors %}
            <div class="alert alert-danger">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endfor %}

        {{ form_start(form) }}

            {{ form_row(form.name) }}
            {{ form_row(form.text) }}

            <div class="clearfix">
                <div class="btn-group float-right" role="group" aria-label="">
                    <a class="btn btn-secondary" href="{{ path('info_show', {'id': info.id}) }}" role="button">{{ "link.info.back"|trans }}</a>
                    <button type="submit" class="btn btn-success">{{ "button.info.save"|trans }}</button>
                </div>
        {{ form_end(form) }}

            {{ include('info/_delete_form.html.twig') }}
        </div>
    </div>
</main>
{% endblock %}
