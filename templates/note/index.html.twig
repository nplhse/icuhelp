{% extends 'base.html.twig' %}

{% block title %}Note index{% endblock %}

{% block body %}
<main role="main" class="container">
    {{ include('components/project_tabs.html.twig') }}

    <div>
        <h1 class="mt-2">Note index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Category</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for note in notes %}
            <tr>
                <td>{{ note.id }}</td>
                <td><a href="{{ path('note_show', {'id': note.id}) }}">{{ note.name }}</a></td>
                <td>{{ note.category }}</td>
                <td>
                    <a href="{{ path('note_edit', {'id': note.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <div class="clearfix">
            <div class="btn-group float-right" role="group" aria-label="">
                <a class="btn btn-primary" href="{{ path('note_new') }}" role="button">{{ "button.note.new"|trans }}</a>
            </div>
        </div>

    </div>
</main>
{% endblock %}
