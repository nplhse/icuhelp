{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - {{ "title.note.edit"|trans }} - {{ note.name }}{% endblock %}

{% block body %}
    {{ include('components/project_tabs.html.twig') }}

    <h1 class="mt-2">{{ "title.note.edit"|trans }}</h1>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}" role="alert">
                {{ message|trans }}
            </div>
        {% endfor %}
    {% endfor %}

    {{ include('note/_form.html.twig', {'action': 'update'}) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {{ encore_entry_script_tags('editor') }}
{% endblock %}