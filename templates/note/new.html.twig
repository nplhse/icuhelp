{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - {{ "title.note.new"|trans }}{% endblock %}

{% block body %}
<main role="main" class="content container">
    {{ include('_components/project_tabs.html.twig') }}

    <div>
        <h1 class="mt-2">{{ "title.note.new"|trans }}</h1>

        {% for error in errors %}
            <div class="alert alert-danger">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endfor %}

        {{ include('note/_form.html.twig', {
            button_text: 'button.note.create'
        }) }}

    </div>
</main>
{% endblock %}
