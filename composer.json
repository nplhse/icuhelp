{
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": "^7.2.5",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "craue/formflow-bundle": "^3.3",
        "doctrine/doctrine-bundle": "*",
        "doctrine/doctrine-migrations-bundle": "^3.0.1",
        "doctrine/orm": "*",
        "easycorp/easyadmin-bundle": "^3.0",
        "friendsofsymfony/ckeditor-bundle": "^2.2",
        "league/flysystem": "^1.1",
        "league/flysystem-bundle": "^1.5",
        "league/flysystem-memory": "^1.0",
        "ramsey/uuid-doctrine": "^1.6",
        "sensio/framework-extra-bundle": "^5.5",
        "sensiolabs/security-checker": "^6.0",
        "symfony/console": "5.1.*",
        "symfony/debug-pack": "^1.0",
        "symfony/dotenv": "5.1.*",
        "symfony/filesystem": "5.1.*",
        "symfony/flex": "^1.3.1",
        "symfony/form": "5.1.*",
        "symfony/framework-bundle": "5.1.*",
        "symfony/mailer": "5.1.*",
        "symfony/maker-bundle": "^1.15",
        "symfony/security-bundle": "5.1.*",
        "symfony/translation": "5.1.*",
        "symfony/twig-pack": "^1.0",
        "symfony/validator": "5.1.*",
        "symfony/webpack-encore-bundle": "^1.7",
        "symfony/yaml": "5.1.*",
        "symfonycasts/reset-password-bundle": "^1.1",
        "symfonycasts/verify-email-bundle": "^1.0",
        "twig/intl-extra": "^3.0"
    },
    "require-dev": {
        "doctrine/doctrine-fixtures-bundle": "^3.3",
        "friendsofphp/php-cs-fixer": "^2.16",
        "php-coveralls/php-coveralls": "^2.3",
        "phpstan/phpstan": "^0.12.48",
        "symfony/browser-kit": "5.1.*",
        "symfony/css-selector": "5.2.*",
        "symfony/phpunit-bridge": "^5.1",
        "symfony/requirements-checker": "^2.0",
        "zenstruck/foundry": "^1.1"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd",
            "security-checker security:check": "script",
            "requirements-checker": "script"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "build": [
            "yarn encore dev"
        ],
        "ci": [
            "@run-checks",
            "@run-tests"
        ],
        "reset": [
            "@composer install",
            "bin/console doctrine:database:drop --force",
            "bin/console doctrine:database:create",
            "@setup"
        ],
        "run-checks": [
            "vendor/bin/php-cs-fixer fix",
            "vendor/bin/phpstan analyse"
        ],
        "run-tests": [
            "vendor/bin/simple-phpunit"
        ],
        "setup": [
            "@setup-db",
            "@setup-frontend"
        ],
        "setup-db": [
            "bin/console doctrine:migrations:migrate",
            "bin/console doctrine:fixtures:load --no-interaction"
        ],
        "setup-frontend": [
            "yarn install",
            "yarn encore dev"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "require": "5.1.*"
        }
    }
}
